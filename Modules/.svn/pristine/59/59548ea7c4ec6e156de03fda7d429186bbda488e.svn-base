/*BB1 G Truslove 2017*/

.articles-banner-table {
	width: 100%;
	table-layout: fixed;
	min-height: 100px;
}

.articles-banner-image-td {
	width: 100px;
	background-size: cover;
	background-color: white;
	background-repeat: no-repeat;
	background-position: center center;
}

.articles-banner-td {
	color: white;
	padding: $sc-padding-lv3;
}

.articles-banner-title {
	color: white;
	font-size: 20px;
	text-transform: none;
	font-weight: bold;
}

.articles-banner-type {
	color: white;
	font-size: 14px;
	opacity: .85;
	text-transform: uppercase;
	letter-spacing: 2px;
}

.articles-image-box {
	border-width: $sc-padding-lv3;
	border-color: white;
	border-style: solid;
	width: 100%;
	background-size: cover;
	background-color: white;
	background-repeat: no-repeat;
	background-position: center center;
	height: 100px;
	-webkit-box-shadow: 4px 4px 13px 6px rgba(0, 0, 0, 0.2);
	-moz-box-shadow: 4px 4px 13px 6px rgba(0, 0, 0, 0.2);
	box-shadow: 4px 4px 13px 6px rgba(0, 0, 0, 0.2);
	padding: 40%;
	margin-bottom: $sc-margin-lv1;
}

.articles-image-title {
	text-align: center;
	padding-left: $sc-padding-lv1;
}

.articles-standard-title {
	font-size: 16px;
}

.articles-standard-type {
	font-size: 12px;
	text-transform: uppercase;
	letter-spacing: 1px;
	font-weight: standard;
}

.articles-standard-break {
	border-top: 1px dashed #AAA;
}

.articles-type {
	font-size: 20px;
	text-transform: uppercase;
	letter-spacing: 2px;
	font-weight: bold;
}

.articles-padding {
	padding: $sc-padding-lv2;
}

.articles-padding-banner {
	padding: 0 $sc-padding-lv2 $sc-padding-lv2 $sc-padding-lv2;
}

.articles-list {
	margin-left: -$sc-padding-lv5;
	margin-right: -$sc-padding-lv5;
	margin-bottom: $sc-padding-lv3;
}

.social-sharing-flyout-icons {
	text-align: right;
}

.page-title {
	text-align: center;
	background-color: #888;
	color: white;
	margin-bottom: $sc-margin-lv5;
	font-size: 20px;
	display: block;
	font-weight: bold;
	line-height: 90px;
	height: 90px;
}

.articles-more {
	text-align: right;
	text-transform: uppercase;
	letter-spacing: 2px;
	color: #7e7e7e;
}

.articles-more:hover {
	color: #00db8d!important;
}

.articles-more-container {
	text-align: right;
	padding-bottom: $sc-padding-lv3;
}

.article-content-container {
	padding: 0 0 $sc-padding-lv6 0;
	line-height: 1.3;
}

.article-content p {
	line-height: 1.3;
	margin:$sc-margin-lv2 0;
}

.article-related-container {
	margin-bottom: $sc-padding-lv6;
	padding: $sc-padding-lv2 0;
}

.article-related-title {
	font-size: 20px;
	text-transform: uppercase;
	letter-spacing: 2px;
	font-weight: bold;
	margin-bottom: $sc-margin-lv2;
}

@media (max-width: 991px) {
	.hidden-sm {
		display: none;
	}
}

@media (min-width: 500px) {
	.articles-banner-table {
		min-height: 150px;
	}
	.articles-banner-image-td {
		width: 150px;
	}
	.page-title {
		line-height: 130px;
		height: 130px;
		font-size: 23px;
	}
}

@media (min-width: 768px) {
	.articles-banner-table {
		min-height: 175px;
	}
	.articles-banner-image-td {
		width: 175px;
	}
	.articles-banner-td {
		padding: $sc-padding-lv4;
	}
	.articles-banner-title {
		font-size: 24px;
	}
	.page-title {
		line-height: 170px;
		height: 170px;
		font-size: 26px;
	}
}

@media (min-width: 992px) {
	.articles-banner-table {
		min-height: 200px;
	}
	.articles-banner-image-td {
		width: 200px;
	}
	.articles-banner-td {
		padding: $sc-padding-lv5;
	}
	.articles-banner-title {
		font-size: 28px;
	}
	.page-title {
		line-height: 210px;
		height: 210px;
		font-size: 29px;
	}
}

@media (min-width: 1200px) {
	.articles-banner-table {
		min-height: 225px;
	}
	.articles-banner-image-td {
		width: 225px;
	}
	.articles-banner-td {
		padding: $sc-padding-lv6;
	}
	.articles-banner-title {
		font-size: 32px;
	}
	.page-title {
		line-height: 250px;
		height: 250px;
		font-size: 32px;
	}
}

.table-responsive {
	overflow-x: auto;
	border-style: none;
}

.article-content table {
	border-top: 1px solid $st-content-border;
	border-bottom: 1px solid $st-content-border;
	border-style-left: none;
	border-style-right: none;
	margin-bottom:$sc-margin-lv2;
}

.article-content table tr th {
	text-transform: uppercase;
	border-bottom: 1px solid $st-content-border;
	color: $st-content-th;
	letter-spacing: 1px;
	padding: $sc-padding-lv3;
	font-size: .9em;
	border-style: none;
}

.article-content table tr td {
	color: $st-content-td;
	padding: $sc-padding-lv2;
	font-size: 1.2em;
	border-style: none;
}

.article-content table tr:nth-child(even) {
	background: $st-content-row;
}

.article-content table tr:nth-child(odd) {}

.article-content .large-image {
	border: 1px solid $st-content-border;
	padding-bottom: $sc-padding-lv3;
	background-color: $st-content-row;
	font-size: 1.2em;
	text-align: center;
	color: $st-content-td;
	margin-bottom: 22px;
}

.large-image img {
	width: 100%;
	margin-bottom: $sc-padding-lv3;
	border-bottom: 1px solid $st-content-border;
}

.article-content .medium-cell {
	@extend .col-sm-4;
	@extend .col-xs-6;
}

.article-content .medium-image {
	border: 1px solid $st-content-border;
	padding-bottom: $sc-padding-lv2;
	background-color: $st-content-row;
	font-size: 1.1em;
	text-align: center;
	color: $st-content-td;
	margin-bottom: 22px;
}

.medium-image img {
	width: 100%;
	margin-bottom: $sc-padding-lv2;
	border-bottom: 1px solid $st-content-border;
}

.article-content .small-cell {
	@extend .col-md-3;
	@extend .col-sm-3;
	@extend .col-xs-4;
}

.article-content .small-image {
	border: 1px solid $st-content-border;
	padding-bottom: $sc-padding-lv1;
	background-color: $st-content-row;
	font-size: 1em;
	text-align: center;
	color: $st-content-td;
	margin-bottom: 22px;
}

.small-image img {
	width: 100%;
	margin-bottom: $sc-padding-lv1;
	border-bottom: 1px solid $st-content-border;
}

.w-100 {
	width: 100%;
}

hr {
	height: 2px;
}

.article-video {
	position: relative;
	padding-bottom: 56.25%;
	/* 16:9 */
	padding-top: 25px;
	height: 0;
}

.article-video iframe {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.cell-number {
	background-color: red;
	color: $st-color-white;
	position: absolute;
	font-size: 1.5em;
	padding: $sc-padding-lv1 $sc-padding-lv3;
	z-index: 1;
}
.article-content h1{
	color:$sc-color-copy;
	text-transform:none;
	text-align:left;
	font-weight:900;
	font-size:32px;
	letter-spacing:0;
	margin-bottom:$sc-margin-lv3;
}
.article-content h2{
	color:$sc-color-copy;
	text-transform:none;
	text-align:left;
	font-weight:700;
	font-size:26px;
	letter-spacing:0;
	margin-bottom:$sc-margin-lv2;
}
.article-content ol{
list-style: decimal;
margin-bottom:$sc-margin-lv2;
margin-left:$sc-margin-lv6;
}
.article-content ol li{
font-size: $sc-font-size-l;
    color: lighten($sc-color-copy,10);
    line-height: 1.6;
    list-style: decimal;
    font-size:1.2em;
    }
    .article-content ul{
list-style: square;
margin-bottom:$sc-margin-lv2;
margin-left:$sc-margin-lv6;
}
.article-content ul li{
font-size: $sc-font-size-l;
    color: lighten($sc-color-copy,10);
    line-height: 1.6;
    list-style: square;
    font-size:1.2em;
    }