define('ContactUs.RegisterB2B.View', [
  'Backbone',
  'register_b2b.tpl',
  'underscore',
  'SC.Configuration',
  'ContactUs.RegisterB2B.Form.LC.View',
  'ContactUs.RegisterB2B.Form.LC.Model',
  'ContactUs.RegisterB2B.Form.ST.View',
  'ContactUs.RegisterB2B.Form.ST.Model'
], function (
  Backbone,
  RegisterB2BTpl,
  _, 
  Configuration,
  FormLCView,
  FormLCModel,
  FormSTView,
  FormSTModel
) {
  'use strict';

  return Backbone.View.extend({

    attributes: {
      'class': 'contactus'
    },

    events: {
      'click .accordion-grey': 'showAccordion',
    },

    getBreadcrumbPages: function () {
      return [{
        text: _('Credit Account Application').translate(),
        href: '/credit-account-appliction'
      }]
    },

    initialize: function (options) {
      this.childViewFormLC = new FormLCView({
        application: options.application,
        model: new FormLCModel()
      });
      this.childViewFormST = new FormSTView({
        application: options.application,
        model: new FormSTModel()
      })
    },

    template: RegisterB2BTpl,

    getTitle: function () {
      return SC.Tools.getTitle("Credit Account Application");
    },

    getMetaDescription: function () {
      return "Use this Form to apply for a credit account.";
    },

    getAddToHead: function () {
      return SC.Tools.getSEO({
        title: "Credit Account Application",
        summary: this.getMetaDescription()
      });
    },

    showAccordion: function (e) {
      e.preventDefault();
      var $acc = $(e.target);

      if (!$acc.hasClass("accordion-grey")) {
        $acc = $acc.closest(".accordion-grey");
      }
      $acc.toggleClass("accordionactive");
      $acc = $acc.next();
      $acc.slideToggle();
    },

    render: function () {
      this.$el.html(this.template());
      this.$el.find('.contactus-lc-accordion').append(this.childViewFormLC.render().el);
      this.$el.find('.contactus-st-accordion').append(this.childViewFormST.render().el);
    }

  });
});