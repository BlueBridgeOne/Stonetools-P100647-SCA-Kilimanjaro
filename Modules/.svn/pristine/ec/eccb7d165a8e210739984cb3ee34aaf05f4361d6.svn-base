$sc-mobile-nav-height: 72px;

$sc-main-nav-height: 168px;
$sc-main-nav-width: 130px;
$sc-main-nav-link-height: 44px;
$sc-secondary-menu-height: 55px;
$sc-secondary-menu-height-link: 53px;
$sc-sidebar-size: 246px;

$sc-main-nav-icon-height: 29px;
$sc-main-nav-icon-m-right: 10px;
$sc-main-nav-icon-m-top: 8px;

.header-message {
	padding: 0;
	background-color: $sc-color-theme-background;
	text-align: center;

	.global-views-message {
		@extend .container;
		margin-bottom: 0px;
		@media (min-width: $screen-md-min) {
			padding:$sc-padding-lv3;
			margin-left: -$sc-margin-lv6;
			margin-right: -$sc-margin-lv6;
		}
	}
}

.header-main-wrapper {
	background-color: $st-color-grey;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 999;
	@media (max-width: $screen-xs-max) {
		height:$sc-mobile-nav-height!important;
	}
}

.header-main-nav {
	@extend .container;
}

.header-main-wrapper {
	min-height: $sc-main-nav-height;
	@media (max-width: $screen-xs-max) {
		min-height:$sc-mobile-nav-height!important;
	}
}

.header-controls {
	margin-top: 59px;
	@media (max-width: $screen-xs-max) {
		margin-top:11px!important;
	}
}

.header-content {
	@extend .clearfix;
}

///////////////////////////////////////////////////////////////
//header sidebar toggle
.header-sidebar-toggle-wrapper {
	margin-left: -$sc-padding-lv2;
	@media(min-width: $screen-md-min) {
		display: none!important;
	}
}

.header-sidebar-toggle {
	width: $sc-target-size;
	height: $sc-target-size;
	background-color: transparent;
}

.header-sidebar-toggle:focus {
	outline: 0;
}

.header-sidebar-toggle-icon {
	@extend .fa;
	@extend %fa-bars;
	color: $st-color-lightgrey;
	font-size: 24px;
}

.header-sidebar-toggle-icon:hover {
	color: $st-color-white;
}

///////////////////////////////////////////////////////////////
//main nav positioning
.header-left-side-menus {
	display: none;
	@media(min-width: $screen-md-min) {
		display:block;
	}
}

.header-right-side-menus {}

.header-menu-profile,
.header-menu-quote,
.header-menu-quickorder,
.header-menu-settings {
	float: left;
	display: none;

	@media (min-width: $screen-md-min) {
		display: block;
	}
}

.sidebar-only {
	padding: $sc-padding-lv2 $sc-padding-lv1;
	display: block;
	@media (min-width: $screen-md-min) {
		display: none;
	}
}

.header-menu-storelocator {
	float: left;
}

.header-menu-settings {
	position: relative;
}

.header-menu-settings-dropdown-title {
	margin-bottom: $sc-margin-lv2;
}

.header-menu-cart {
	float: right;
	position: relative;
}


%header-link {
	display: block;
	width: 50px;
	overflow: hidden;
}

%header-link:hover,
%header-link:focus {
	color: $sc-color-copy;
}

%header-link:active {
	color: $sc-color-copy-dark;
}

.header-menu-settings-link,
.header-menu-cart-link,
.header-menu-searchmobile-link {
	@extend %header-link;
}



///////////////////////////////////////////////////////////////
//main nav styles
.header-menu-settings-icon {
	font-size: $sc-font-size-xl;
	@extend .fa;
	@extend %fa-globe;
}

.header-menu-settings-carret {
	margin-left: $sc-margin-lv1;
	@extend .fa;
	@extend %fa-angle-down;
}

///////////////////////////////////////////////////////////////
//secondary nav styles
.header-secondary-wrapper {
	position: fixed;
	top: 0;
	bottom: 0;
	left: - $sc-sidebar-size;
	width: $sc-sidebar-size;
	background-color: $st-color-grey;

	@media (min-width: $screen-md-min) {
		top: 168px;
		bottom: auto;
		left: 0;
		width: 100%;
		height: $sc-secondary-menu-height;
		border-top: 2px solid darken($st-color-lightgrey, 30);
		border-bottom: 2px solid $st-color-grey;
	}
	@media (max-width: $screen-sm-max) {
		top: 0px!important;
	}
}


///////////////////////////////////////////////////////////////
//header settings
.header-menu-settings-dropdown {
	display: none;
	position: absolute;
	z-index: 1001;
	background: $sc-neutral-shade-0;
	padding: $sc-padding-lv6;
	left: -130px;
	box-shadow: 0 6px 12px transparentize($sc-neutral-shade-600, 1-0.175);
	border: 1px solid $sc-color-theme-border-light;
	width: 335px;

	&:before {
		position: absolute;
		top: -7px;
		right: 165px;
		display: inline-block;
		border-right: 7px solid transparent;
		border-bottom: 7px solid $sc-color-theme-border-light;
		border-left: 7px solid transparent;
		border-bottom-color: transparentize($sc-neutral-shade-600, 1-0.2);
		content: '';
	}

	&:after {
		position: absolute;
		top: -6px;
		right: 166px;
		display: inline-block;
		border-right: 6px solid transparent;
		border-bottom: 6px solid $sc-neutral-shade-0;
		border-left: 6px solid transparent;
		content: '';
	}
}

.open .header-menu-settings-dropdown {
	display: block;
}

.header-site-search {
	display: none;
	width: 100%;
	background: $sc-neutral-shade-0;
	position: fixed;
	top: 168px;
	@media (min-width: $screen-md-min) {
		top: 223px;
	}
	@media (max-width: $screen-xs-max) {
		display: block!important;
		top: $sc-mobile-nav-height!important;
	}
}

.header-menu-cart-dropdown {}

.header-sidebar-overlay {}

.header-subheader {
	background: $sc-color-theme-background;
	display: none;
	text-align: right;
	font-size: $sc-font-size-m;
	color: $sc-color-secondary;
	border-top: 1px solid $sc-color-theme-border-light;
	border-bottom: 1px solid $sc-color-theme-border-light;
	@media(min-width: $screen-sm-min) {
		display: block;
	}
}

.header-subheader-container {
	@extend .container;
	padding-right: $sc-padding-lv6;
}

.header-subheader-options {
	padding-top: $sc-padding-lv2;
	padding-bottom: $sc-padding-lv2;

	li {
		display: inline;
		padding-left: $sc-padding-lv3;
	}
}

.header-subheader-settings-link {
	display: inline;
	color: $sc-color-secondary;
}

.header-subheader-settings {
	position: relative;
}



/* BB1 Custom Profile Icon */

.header-user-icon {
	display: inline-block;
	background-image: url('../img/User.png');
	background-image: url('../img/User.svg');
	background-size: 100% 100%;
	width: $sc-main-nav-icon-height;
	height: $sc-main-nav-icon-height;
	margin-top: $sc-main-nav-icon-m-top;
	margin-right: $sc-main-nav-icon-m-right;

	&:hover {
		background-image: url('../img/UserHover.png');
		background-image: url('../img/UserHover.svg');
	}
}

.header-menu-cart-icon {
	display: inline-block;
	background-image: url('../img/Basket.png');
	background-image: url('../img/Basket.svg');
	background-size: 100% 100%;
	width: $sc-main-nav-icon-height;
	height: $sc-main-nav-icon-height;
	margin-top: $sc-main-nav-icon-m-top;
	margin-right: $sc-main-nav-icon-m-right;

	&:hover {
		background-image: url('../img/BasketHover.png');
		background-image: url('../img/BasketHover.svg');
	}
}

.header-menu-global-icon {
	display: inline-block;
	background-image: url('../img/Global.png');
	background-image: url('../img/Global.svg');
	background-size: 100% 100%;
	width: $sc-main-nav-icon-height;
	height: $sc-main-nav-icon-height;
	margin-top: $sc-main-nav-icon-m-top;
	margin-right: $sc-main-nav-icon-m-right;

	&:hover {
		background-image: url('../img/GlobalHover.png');
		background-image: url('../img/GlobalHover.svg');
	}
}

.header-menu-search-icon {
	display: inline-block;
	background-image: url('../img/Search.png');
	background-image: url('../img/Search.svg');
	background-size: 100% 100%;
	width: $sc-main-nav-icon-height;
	height: $sc-main-nav-icon-height;
	margin-top: $sc-main-nav-icon-m-top;
	margin-right: $sc-main-nav-icon-m-right;

	&:hover {
		background-image: url('../img/SearchHover.png');
		background-image: url('../img/SearchHover.svg');
	}
}

.header-menu-cart-link-enabled {
	.header-menu-cart-icon {
		color: $st-color-white;
	}
}

.header-menu-global-link {
	background-color: transparent;
	position: relative;
}

.header-icon-badge {
	position: absolute;
	top: -6px;
	left: 15px;
	background: $st-color-lightgrey;
	color: $st-color-white;
	padding: 4px;
	box-sizing: border-box;
	border-radius: 100%;
	font-size: $sc-font-size-xs;
	-webkit-text-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
	-moz-text-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
	text-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
	min-width: 24px;
	min-height: 22px;
	text-align: center;
	display: block;
}

.header-menu-cart-legend {
	@extend .header-icon-badge;
	background: $st-color-green;
}

button:hover .header-icon-badge {
	background: $st-color-green;
}


.header-menu-cart-link {
	float: right;
}

.header-menu-search {
	float: right;
	position: relative;
	@media (max-width: $screen-xs-max) {
		display:none;
	}
}

.header-user-link,
.header-menu-global {
	float: right;
	position: relative;
	@media (max-width: $screen-sm-max) {
		display:none;
	}
}

.header-tag {
	font-weight: bold;
	padding-top: 5px;
	color: $st-color-lightgrey;
	font-size: 1.15em;
}

.header-shadow {
	@include box-shadow(0 6px 12px transparentize(black,
	1-0.3));
}