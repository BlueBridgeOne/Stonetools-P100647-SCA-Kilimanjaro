.cart-item-summary-item-list-actionable-qty{
}

.cart-item-summary-item-list-actionable-qty-form{
}

.cart-item-summary-item-list-actionable-container-qty {
	margin-bottom: 10px;

	.cart-item-summary-item-list-actionable-label-qty {

		display: block;
		vertical-align: middle;
		margin-bottom:$sc-margin-lv2;
		font-weight: 600;

		@media (min-width: $screen-md-min) {
			display: table-cell;
		}
	}
	.cart-item-summary-item-list-actionable-input-qty {

		display: block;
		vertical-align: middle;
		overflow: hidden;
		@media (min-width: $screen-md-min) {
				display: table-cell;;
				padding-left: 20px;
		}
	}
}

.cart-item-summary-item-list-actionable-label-qty{
	@extend .transaction-line-views-cell-actionable-label-qty;
}

.cart-item-summary-item-list-actionable-input-qty{
	@extend .transaction-line-views-cell-actionable-input-qty;
}

.cart-item-summary-item-list-actionable-amount{
	@extend .transaction-line-views-cell-actionable-amount;
}

.cart-item-summary-item-list-actionable-amount-label{
	@extend .transaction-line-views-cell-actionable-amount-label;
}

.cart-item-summary-item-view-old-price{
	@extend .transaction-line-views-price-old;
}

.cart-item-summary-amount-value{
}

.cart-item-summary-quantity-title-help{
	clear: both;
	margin-top: $sc-margin-lv1;
	display: block;
	font-weight:$sc-font-weight-light;
}

.cart-item-summary-quantity-add,.cart-item-summary-quantity-remove {
	@extend .button-secondary;
	
	border: none;
	width: $sc-target-size-mobile;
	height: $sc-target-size-mobile;

	&:focus {
		outline: none;
	}

-webkit-border-radius: 50%;
	border-radius: 50%;

	@media (min-width: $screen-md-min) {
		width: $sc-target-size-desktop;
	height: $sc-target-size-desktop;
	}
}


.cart-item-summary-quantity-value {
 	@extend .quantity-input;
	height: $sc-target-size-mobile!important;
 	padding:$sc-margin-lv1!important;
 	width: 50px!important;
 	text-align: right;
	background-color: #ebf1f4;
	border: 0;
	-webkit-border-radius: 0 0 0 0;
	border-radius: 0 0 0 0;
	font-weight:$sc-font-weight-normal;
	display: inline-block!important;
	margin:0px 2px;
	float:none!important;

	@media (min-width: $screen-md-min) {
height: $sc-target-size-desktop!important;
	}
}

.cart-item-summary-promocodes .cart-promocode-list-item-container{
	@extend .transaction-line-views-cell-actionable-amount-label;
	padding-left: 0;
}

.cart-item-summary-promocodes .cart-promocode-list-item-code-value {
	@extend .sc-value;
}
.stock-cart{margin-top:$sc-margin-lv3;}
