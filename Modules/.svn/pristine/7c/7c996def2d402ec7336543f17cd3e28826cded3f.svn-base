footer {
    background: $st-color-grey;
}

.footer-content {
    @extend .container;
    @extend .row;
    margin: auto;
    padding-top: 55px;
    padding-bottom: 5px;
}
.footer-subcontent {
    @extend .container;
    @extend .row;
    margin: auto;
}
.footer-subcontent-line{
    border-top:2px solid darken($st-color-lightgrey,30);
    padding:$sc-padding-lv3 0px $sc-padding-lv1 0px;
}

.footer-content-nav-list {
    list-style: none;
    margin-bottom: $sc-padding-lv3;
}

.footer-content-nav-list>li {
    display: block;
    line-height: 1.3;

    @media (max-width: $screen-xs-max) {
        line-height: 1.6;
    }
}

.footer-content-nav-list>li>a {
    color: $st-color-footer-link;
    font-size: .9em;
}

.footer-content-nav-list>li>a:hover {
    color: $st-color-green;
}

.footer-content-copyright {
    display: block;
    float: none;
    clear: both;
}

.footer-strapline {
    color: $st-color-white;
    background-color: $st-color-green;
    font-size: 24px;
    font-weight: bold;
    text-align: left;
    padding: $sc-padding-lv2;
    @media (min-width: $screen-md-min) {
        font-size: 28px;
        padding: $sc-padding-lv4;
    }
    @media (max-width: $screen-xs-max) {
        font-size: 20px;
        text-align: center;
    }
}

.footer-strapline-small {
    font-size: $sc-font-size-l;
    padding-left: 0!important;
}

.footer-strapline-small-text {
    padding: 0 0 0 $sc-padding-lv2!important;
}

$footer-icon-width:51px;
$footer-icon-height:43px;
.footer-strapline-icon {
width:$footer-icon-width*.8;
height:$footer-icon-height*.8;
}

.footer-strapline-comment-icon {
    width:34px;
height:35px;
display:inline-block;
background-image:url('../img/Chat.png');
background-image:url('../img/Chat.svg');
background-size:100% 100%;
vertical-align:middle;
}

.footer-list-title {
    font-weight: bold;
    color: $st-color-white;
    font-size: .9em;
}
.footer-newsletter-title {
    font-weight: bold;
    color: $st-color-white;
    font-size: 1.1em;
}

.footer-address,.footer-subtext {
    font-size: .9em;
    line-height: 1.3;
    color: $st-color-footer-link;
}



.footer-facebook-icon {
    font-size: 24px;
    color: $st-color-green;
    margin-right: $sc-margin-lv3;
    margin-bottom: $sc-margin-lv3;
    @extend .fa;
    @extend %fa-facebook-square;
}

.footer-twitter-icon {
    color: $st-color-green;
    font-size: 24px;
    margin-right: $sc-margin-lv3;
    margin-bottom: $sc-margin-lv3;
    @extend .fa;
    @extend %fa-twitter-square;
}

.footer-linkedin-icon {
    color: $st-color-green;
    font-size: 24px;
    margin-right: $sc-margin-lv3;
    margin-bottom: $sc-margin-lv3;
    @extend .fa;
    @extend %fa-linkedin-square;
}

.footer-facebook-icon:hover,
.footer-twitter-icon:hover,
.footer-linkedin-icon:hover {
    color: lighten($st-color-green, 10);
}

.button-schedule-call{
 @extend .button-primary-border;
 @extend .button-large;
background-color:none;
width:100%;
text-transform:uppercase;
margin-bottom:$sc-margin-lv2;
margin-top:$sc-margin-lv4;

@media (max-width: $screen-xs-max) {
        margin-top:$sc-margin-lv1;
    }
    @media (min-width: $screen-md-min) {
        margin-top:$sc-margin-lv1;
    }

}

.footer-schedule-icon-size {
    font-size:24px;
    vertical-align:middle;
}

.footer-schedule-icon {
    @extend .fa;
    @extend %fa-phone-square;
}
