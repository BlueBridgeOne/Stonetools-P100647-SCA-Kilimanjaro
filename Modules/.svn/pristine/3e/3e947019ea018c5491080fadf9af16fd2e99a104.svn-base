.facets-category-cell {
	float: left;
	position: relative;
	min-height: 1px;
	padding-left: $sc-margin-lv2;
	padding-right: $sc-margin-lv2;
	text-align: center;
	margin-bottom: $sc-margin-lv3;
	width: 50%;

	@media (min-width: $screen-md-min) {
		width: 25%;
	}
}

.facets-category-cell-thumbnail {
	display: block;
	width: 100%;

	-webkit-box-shadow: 4px 4px 13px 6px rgba(0, 0, 0, 0.2);
	-moz-box-shadow: 4px 4px 13px 6px rgba(0, 0, 0, 0.2);
	box-shadow: 4px 4px 13px 6px rgba(0, 0, 0, 0.2);

	border-width: $sc-padding-lv3;
	border-color: white;
	border-style: solid;
}

.facets-category-cell-image {
	width: 100%;
	-webkit-filter: grayscale(100%) contrast(200%) brightness(60%);
	filter: grayscale(100%) contrast(200%) brightness(60%);
	box-sizing: border-box;
}

.facets-category-cell-image:hover {
	transition: .5s ease;
	-webkit-filter: grayscale(85%) contrast(150%) brightness(90%);
	filter: grayscale(85%) contrast(150%) brightness(90%);
}

.facets-category-cell-title {
	padding: $sc-padding-lv3 0 0 0;
	font-size: 1.2em;
	color: $sc-color-copy;
	min-height:56px;
}

.facets-category-cell-anchor {}