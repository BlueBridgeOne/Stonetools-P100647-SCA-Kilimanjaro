.contactus-container {
  @extend .container;
}

.contactus-form {
  margin: $sc-margin-lv3;
}

.entry-form {
  background-color: $st-color-lightgreen;
  border-top: 1px solid $st-color-green;
  margin-bottom: $sc-margin-lv3;
  padding: $sc-padding-lv3;

  @media (min-width: $screen-md-min) {
    margin-bottom: $sc-margin-lv6;
    padding: $sc-padding-lv6;
  }
}

.entry-form-title{
@extend .articles-header-title;
margin-bottom: $sc-margin-lv3;

  @media (min-width: $screen-md-min) {
    margin-bottom: $sc-margin-lv6;
  }
}

.entry-form input,
.entry-form select {
  border-style: none;
}

.contactus-firstname,
.contactus-lastname,
.contactus-company,
.contactus-email,
.contactus-subject,
.contactus-time,
.contactus-phone,
.contactus-message,
.contactus-address,
.contactus-address2,
.contactus-city,
.contactus-zip,
.contactus-country,
.contactus-state {
  @extend .row;


  input {
    @extend .input-large;
  }
}

.contactus-message textarea {
  display: block;
  width: 100%;
}

.contactus-required {
  @extend .input-required;
  float: right;
}

.contactus-button-container {
  @extend .row;
  margin-top: $sc-margin-lv4;
  text-align: center;
}

.contactus-button-submit {
  @extend .button-primary;
  @extend .button-large;
  width: 50%;
  margin: 0px auto;
}

.contactus-breakline {
  background-color: $sc-color-theme-900;
  margin: $sc-margin-lv2 0;
}

.contactus-infoiconwidth {
  width: 70px;
  text-align: right;
}

.contactus-icon {
  @extend .fa;
  @extend .fa-fw;
  font-size: 1.3em;
  color: $sc-color-theme-900
}

.icon-address {
  @extend .contactus-icon;
  @extend %fa-paper-plane;
}

.icon-phone {
  @extend .contactus-icon;
  @extend %fa-phone;
}

.icon-call {
  @extend .contactus-icon;
  @extend %fa-phone;
  font-size: 1em;
}

.icon-facebook {
  @extend .contactus-icon;
  @extend %fa-facebook;
}

.icon-twitter {
  @extend .contactus-icon;
  @extend %fa-twitter;
}

.icon-linkedin {
  @extend .contactus-icon;
  @extend %fa-linkedin;
}

.icon-flag {
  @extend .contactus-icon;
  @extend %fa-flag;
}

.contactus-infotitle {
@extend .h2-title;
  width: 100%;
  background-color: $sc-color-theme-background;
  color: $sc-color-copy;
  padding: $sc-padding-lv3;
}
.contactus-infotext{
  padding: $sc-padding-lv3;}

  .contactus-infotext p{color: $sc-color-copy;font-size:1.2em;margin-bottom:$sc-margin-lv1;}

.contactus-messagebody {
  text-align: center;
  margin-top: $sc-margin-lv4;
  margin-bottom: $sc-margin-lv7;
  color: $st-color-text;
}

.global-views-countriesDropdown-select,
.global-views-states-group-select {
  min-width: 300px;
}

.contactus-accordion{
  border-bottom: 1px solid #00cf8b;
}

.contactus-limited-company-form,
.contactus-sole-trader-form{
  margin: 15px 0;

  fieldset > div{
    margin: 0;
  }

  input[type="checkbox"]{
    margin-bottom: 10px;
  }

  input[type="text"],
  input[type="email"]{
    &.full-width{
      width: 100%;
    }
  }

  legend{
    display: inline-block;
    margin-bottom: 10px;
    padding-top: 5px;
    font-size: 1.1rem;
    color: #666;
    text-transform: uppercase;
    font-weight: bold;
  }
  
  .defaultbillingaddress,
  .defaultshippingaddress{
    display: none;
  }

  .btn {
    padding: 17px;
    position: relative;
    margin-bottom: 10px;
    @include border-radius(5px);
  }

  .btn-success:before {
    position: absolute;
    font-family: 'FontAwesome';
    top: 5px;
    left: 10px;
    font-size: 1.3em;
    content: "\f055";
  }

  .btn-danger:before {
    @extend .btn-success:before;
    content: "\f056";
  }
}

.accordion-grey{
  padding: 15px 20px 0;
  background: #cbe8df;
  border-top: 1px solid #00cf8b;

  .accordion-icon{
    top: -15px;
  }
}

.accordion-title{
  color: #5a5a5a;
}
