.main, .layout-container {
	min-height: 100%;
	height: auto;
	width: 100%;
}

%sc-layout {
	min-height: 100%;
}

%sc-footer {
}

.layout-overlay{
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
}

/* BB1 Generic Style */

$sc-target-size-desktop:30px;

.float-right{float:right;}
.text-center{text-align:center;}
.text-right{text-align:right;}
.div-center{margin-left:auto!important;margin-right:auto!important;}
.no-padding{padding:0;}

.error-management-page-not-found-content,.error-management-expired-link-content,.error-management-forbidden-error-content,.error-management-generic-logout-content,.error-management-internal-error-content,.error-management-logged-out-content{text-align:center;margin-top:$sc-margin-lv4;margin-bottom:$sc-margin-lv7;color:$st-color-text;}
.facets-empty p{text-align:center;margin-top:$sc-margin-lv4;margin-bottom:$sc-margin-lv7;color:$st-color-text;}
.equal-columns{table-layout:fixed;}

/*Print styles*/

@media print
   {
      header,footer{display:none;}
      .do-not-print{display:none;}
      .shopping-layout,.checkout-layout,.myaccount-layout{padding-top:0px!important;}
   }
