///////////////////////////////////////////////////////////////
//header secondary nav
.header-menu-secondary-nav {
	@extend .container;
	text-align:center;
}

///////////////////////////////////////////////////////////////
//header search

.header-menu-search,.header-menu-global {
	float: right;
}

.header-menu-search-link {
	background:none;
	outline:0!important;
}
.header-menu-search-link:hover {
	
}
.header-menu-icon{
  @extend .fa;
  @extend %fa-chevron-circle-right;
  font-size:1.8em;
  color:$st-color-lightgrey;
}

///////////////////////////////////////////////////////////////
//header maxi menu

.header-menu-level1{
display: inline-block;
}
.header-menu-level1 > li {
	display: inline-block;
}

.header-menu-level1-anchor {
	display: block;
	position: relative;
	height:$sc-secondary-menu-height-link;
	line-height:$sc-secondary-menu-height-link;
	padding: 0 $sc-padding-lv1;
	margin-right: $sc-margin-lv2;
	margin-left: $sc-margin-lv2;
	color:$st-color-lightgrey;
    text-transform: uppercase;
    border-bottom:3px solid $st-color-grey;
    font-size:.9em;
    letter-spacing:1px;
}
.header-menu-level1-anchor:focus{
	color: $st-color-nearwhite!important;
}
.header-menu-level1-anchor:hover,.header-menu-level1-anchor:active{
	color: $st-color-nearwhite!important;
	border-bottom:3px solid $st-color-green;
}

.open .header-menu-level1-anchor{
	color: $st-color-white;
	border-bottom:2px solid $st-color-green;
}

//maxi menu level 2
.header-menu-back {
	display: none;
}

.header-menu-level2 > li {
	float: left;
	width: 25%;
	padding-right: 22px;
}

.header-menu-level2-anchor {
	color: $sc-color-copy;
	padding: 6px 5px 6px 14px;
	margin-bottom: 11px;
	margin-top: 11px;
	outline:1px solid $sc-color-theme-border-light;
border-bottom:3px solid transparent;
border-top:3px solid transparent;
	background-color:$st-color-white;
	display: block;
	text-align:left;
font-size:17px;
}
.header-menu-level2-anchor:hover {
	color: $st-color-grey;
	border-bottom:3px solid $st-color-green;
	outline:1px solid $sc-color-theme-border-light;
}
.header-menu-level2-anchor.open {
	color: $st-color-grey;
	border-bottom:3px solid $st-color-green;
	outline:1px solid darken($sc-color-theme-border-light,10);
}
.chapter-icon{width:36px;height:36px;vertical-align:middle;margin-top:5px;margin-bottom:5px;}
.chapter-table{table-layout:fixed;}
.chapter-table td{vertical-align:middle;padding:0!important;}
.chapter-table-icon-td{width:50px;}
//maxi menu level 3

.header-menu-level3{
	display:none;
	position:relative;
	width:100%;
	clear:both;
}

.header-menu-level3 > li {
	float: left;
	width: 25%;
	padding-right: $sc-padding-lv6;
}

.header-menu-level3-anchor {
	display: block;
	padding: $sc-padding-lv1 0 3px 0;
	color:$sc-color-link;
	text-align:left;
	padding-left:$sc-padding-lv1;
}

.header-menu-myaccount-anchor-level3:hover {
	color: $sc-color-link-hover;
}

.header-menu-myaccount-anchor-level3.active {
	color: $sc-color-copy;
}

//container fix for maxi menu on desktop
.header-menu-push-icon, .header-menu-pop-icon {
	display: none;
}

.header-menu-level-container {
	background-color: $st-color-menu;
	display: none;
	position: absolute;
	top: 100%;
	left: 0;
	width: 100%;
	min-height: 150px;
	z-index: 1003;
	padding: 14px 0 14px 0;
	border-bottom: 1px solid $sc-color-theme-border-light;
	border-top: 1px solid $sc-color-theme-border-light;
	@include box-shadow(0 6px 12px transparentize($sc-neutral-shade-600, 1-0.175));

	> li {
		@extend .container;
	}
}

//maxi menu opened
.open .header-menu-level-container {
	display: block;
}

.open .header-menu-level1-anchor:before{
	position: absolute;
	top: 47px;
	left: 50%;
	margin-left: -7.5px;
	display: inline-block;
	border-right: 7px solid transparent;
	border-bottom: 7px solid $sc-neutral-shade-0;
	border-left: 7px solid transparent;
	border-bottom-color: transparentize($sc-neutral-shade-600, 1-0.2);
	content: '';
}

.open .header-menu-level1-anchor:after{
	position: absolute;
	top: 48px;
	left: 50%;
	margin-left: -6.5px;
	display: inline-block;
	border-right: 6px solid transparent;
	border-bottom: 6px solid $sc-neutral-shade-0;
	border-left: 6px solid transparent;
	content: '';
	z-index: 9999;
}
