.quick-order-divider {
	@extend .accordion-divider;
}
.quick-order-expander-head {
	@extend .accordion-head;
}
.quick-order-expander-head-toggle {
	@extend .accordion-head-toggle;
	border-style:solid none none none;
	border-width:1px;
	border-color:$st-color-green;
	background-color:$st-color-lightgreen;
}
.quick-order-expander-toggle-icon {
	@extend .accordion-toggle-icon;
}
.quick-order-expander-body {
	@extend .accordion-body;
	border-style:none;
	&.in { 
		overflow: visible;
	}
}
.quick-order-expander-container {
	@extend .accordion-container;
	margin: 0;

	.quick-add-box {
		margin: 0;
		background-color: $st-color-lightgreen;
	border-style:none;
	}
}

.quick-order-expander-container input,
.quick-order-expander-container select {
  border-style: none;
}

.quick-order-icon{
@extend .fa;
@extend %fa-bolt;
color:$st-color-green;
}
