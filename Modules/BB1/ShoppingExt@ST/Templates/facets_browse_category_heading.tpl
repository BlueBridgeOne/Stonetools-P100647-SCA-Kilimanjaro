<section>
	<div class="category-title">
		{{#if hasBanner}}
		<div class="facets-browse-category-heading-main-image" style="background-image:url('{{resizeImage banner 'categorybanner'}}');">
		</div>
<div class="category-title-overlay-light"></div>
	{{else}}
{{#if hasThumbnail}}
<div class="facets-browse-category-heading-thumb-images">
			<img class="facets-browse-category-heading-thumb-image1" src="{{resizeImage thumbnail 'main'}}" alt="{{pageheading}}" />
			<img class="facets-browse-category-heading-thumb-image2" src="{{resizeImage thumbnail 'main'}}" alt="{{pageheading}}" />
			<img class="facets-browse-category-heading-thumb-image3" src="{{resizeImage thumbnail 'main'}}" alt="{{pageheading}}" />
			<img class="facets-browse-category-heading-thumb-image4" src="{{resizeImage thumbnail 'main'}}" alt="{{pageheading}}" />
		</div>
		<div class="category-title-overlay"></div>
		{{/if}}
		{{/if}}
	
<div class="category-title-text">{{pageheading}}</div>
	</div>
			{{#if showDescription}}	
			<div class="category-title-description article-content">{{{description}}}</div>
		{{/if}}
</section>




